{% extends 'base.html.twig' %}

{% block body %}
    <div class="col-lg-12">
        <br>
        <h1 class="text-center">Retail Products</h1>
        <br>
        <div class="row">
            {% for product in products %}
                <div class="col-lg-2 col-md-6 mb-4">
                    <div class="card h-100">
                        <a href=""><img class="card-img-top" src="{{ product.picture }}" alt=""></a>
                        <div class="card-footer">
                            <h6 class="card-text text-center">
                                <a class="" href="">{{ product.name }}</a>
                            </h6>
                        </div>
                        {% if is_granted('ROLE_EDITOR') %}
                        <div class="card-footer">
                            <h6 class="card-text text-center">
                                <a class="btn btn-danger btn-block" href="{{ path('retail_remove',{'id':product.id}) }}">Remove</a>
                            </h6>
                        </div>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

