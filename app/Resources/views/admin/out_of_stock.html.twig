{% extends 'base.html.twig' %}

{% block body %}
    <div class="col-lg-12">
        <br>
        <h1 class="text-center">Out of stock products</h1>
        <br>
        <div class="row">
            {% for product in products %}
                <div class="col-lg-2 col-md-6 mb-4">
                    <div class="card h-100">
                        <a href="{{ path('product_view',{'id':product.id}) }}"><img class="card-img-top"
                                                                                    src="{{ product.picture }}"
                                                                                    alt=""></a>
                        <div class="card-body">
                            <h6 class="card-text text-center">
                                <a class="" href="{{ path('product_view',{'id':product.id}) }}">{{ product.name }}</a>
                            </h6>
                        </div>
                        <div class="card-footer">
                            <h6><a href="{{ path('product_edit',{'id':product.id}) }}"
                                   class="btn btn-primary btn-block">Edit</a></h6>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

