{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Rate product</h1>
        <div class="row">
            <div class="col-lg-4">
                <br>
                {% form_theme form 'bootstrap_4_layout.html.twig' %}
                {{ form_start(form) }}
                {{ form_row(form.rating) }}
                {{ form_row(form.body) }}
                <button type="submit" class="btn btn-primary btn-block">Rate</button>
                {{ form_end(form) }}
                <br>
            </div>
        </div>
    </div>
    {{ form(form) }}
{% endblock %}

